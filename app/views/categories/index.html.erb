<div id="categories">
  <h1 class="jimbo_header" style="color: white;">Pick a Category</h1>

  <ul class="list-group custom">
    <% @categories.each_with_index do |category, index| %>
    <%= link_to questions_path(category: category, start_language: @start_language, end_language: @end_language), :class => 'custom', :id => category.name do %>
        <li class="list-group-item custom list<%=index%>">
          <p><%= category.name %></p>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>